{
  "name": "skillazon-server",
  "version": "1.0.0",
  "description": "Backend server for Skillazon peer-to-peer skill sharing platform",
  "main": "authServer.js",
  "scripts": {
    "start": "node authServer.js",
    "dev": "nodemon authServer.js",
    "chat": "node chatServer.js",
    "api": "node apiServer.js",
    "setup": "node setupDatabase.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run chat\" \"npm run api\"",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "skillazon",
    "peer-to-peer",
    "learning",
    "teaching",
    "skills",
    "booking",
    "chat",
    "education"
  ],
  "author": "Skillazon Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.16.4",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "socket.io": "^4.7.4",
    "validator": "^13.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.8.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/skillazon.git"
  },
